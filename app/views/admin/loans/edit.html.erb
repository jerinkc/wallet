<div class="edit-loan">
  <h2>Loans</h2>
  <hr/>
  <div class="card mt-5">
    <div class="card-body p-3">
      <%= form_with(model: @loan, local: true, html: { class: 'form-horizontal', data: { turbo: false } }, url: admin_loan_path(@loan)) do |form| %>
        <div class="form-group m-2">
          <%= form.label :amount, class: 'control-label' %>
          <%= form.number_field :amount, class: 'form-control' %>
        </div>

        <div class="form-group m-2">
          <%= form.label :interest, class: 'control-label' %>
          <%= form.number_field :interest_percentage, class: 'form-control' %>
        </div>

        <div class="form-group m-2">
          <%= form.label :comment, class: 'control-label' %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>

        <div class="form-group m-2">
          <%= form.submit 'Update', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
