<div class="loans">
  <h2>Loans</h2>
  <hr/>
  <div class="card mt-5">
    <div class="card-body p-3">
      <div>
        <%= link_to 'ALL', admin_loans_path, class: 'btn btn-outline-primary' %>
        <%= link_to 'Requested', admin_loans_path(filter: :requested), class: 'btn btn-outline-primary' %>
        <%= link_to 'Acccepted', admin_loans_path(filter: :accepted), class: 'btn btn-outline-primary' %>
        <%= link_to 'Rejected', admin_loans_path(filter: :rejected), class: 'btn btn-outline-primary' %>
      </div>

      <div class="mt-5">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Date and Time</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <% @loans.each.with_index do |loan, index| %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td>
                  <%= link_to loan.created_at, user_loan_path(loan), class: 'text-decoration-none' %>
                </td>
                <td scope="row"><%= loan.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
