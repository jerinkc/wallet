<%= form_with(model: loan, local: true, html: { class: 'form-horizontal', data: { turbo: false } }, url:) do |form| %>
  <div class="form-group m-2">
    <%= form.label :amount, class: 'control-label' %>
    <%= form.number_field :amount, class: 'form-control' %>
  </div>

  <div class="form-group m-2">
    <%= form.label :interest, class: 'control-label' %>
    <%= form.number_field :interest_percentage, class: 'form-control' %>
  </div>


  <% if enable_comment %>
    <div class="form-group m-2">
      <%= form.label :comment, class: 'control-label' %>
      <%= form.text_area :comment, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group m-2">
    <%= form.submit (loan.id ? 'Update' : 'Create'), class: 'btn btn-primary' %>
  </div>
<% end %>
