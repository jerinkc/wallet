
<%= form_with(model: loan, local: true, html: { data: { turbo: false } }, url: loan_path(loan)) do |form| %>
  <% actions.each do |action| %>
    <% if action[:method] == :get %>
      <%= link_to action[:name].titleize, action[:path], class: "m-1 btn #{action[:class]}" %>
    <% else %>
      <%= form.submit action[:name].titleize, class: "m-1 btn #{action[:class]}", name: "commit", value: action[:name].titleize %>
    <% end %>
  <% end %>
<% end %>
